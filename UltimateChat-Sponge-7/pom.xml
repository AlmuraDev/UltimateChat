<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>br.net.fabiozumbi12.UltimateChat</groupId>
    <artifactId>UltimateChat</artifactId>
    <version>1.8.2</version>
  </parent>
  <artifactId>UltimateChat-Sponge-7.0</artifactId>
  
  <properties>
    <spongeVersion>7.0.0-SNAPSHOT</spongeVersion>
  </properties>
  
  <dependencies>
    <dependency>
        <groupId>org.spongepowered</groupId>
        <artifactId>spongeapi</artifactId>
        <version>${spongeVersion}</version>
        <scope>provided</scope>
    </dependency> 
    
    <dependency>
        <groupId>org.spongepowered</groupId>
        <artifactId>spongeapi</artifactId>
        <version>${spongeVersion}</version>
        <classifier>javadoc</classifier>
    </dependency> 
    
    <!-- shade all -->
    <dependency>
          <groupId>br.net.fabiozumbi12.UltimateChat</groupId>
          <artifactId>UltimateChat-Spigot</artifactId>
          <version>LATEST</version>
          <scope>compile</scope>
        </dependency>  
        <dependency>
          <groupId>br.net.fabiozumbi12.UltimateChat</groupId>
          <artifactId>UltimateChat-Sponge-5.0-6.0</artifactId>
          <version>LATEST</version>
          <scope>compile</scope>
        </dependency>   
        <dependency>
          <groupId>br.net.fabiozumbi12.UltimateChat</groupId>
          <artifactId>UltimateChat-Bungee</artifactId>
          <version>LATEST</version>
          <scope>compile</scope>
    </dependency>  
    
    <!-- Google JSON lib -->
    <dependency>
       <groupId>com.google.code.gson</groupId>
       <artifactId>gson</artifactId>
       <version>2.8.1</version>
    </dependency>  
    
  </dependencies>
  
  <build>
    <finalName>DONT-DOWNLOAD-SpongeAPI7-Reference</finalName>
    <plugins>
               
        <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                        <artifactSet>                          
                          <includes>
                            <include>br.net.fabiozumbi12.UltimateChat:UltimateChat-Bungee</include>
                            <include>br.net.fabiozumbi12.UltimateChat:UltimateChat-Spigot</include>
  	                        <include>br.net.fabiozumbi12.UltimateChat:UltimateChat-Sponge-5.0-6.0</include>  
  	                        <include>com.google.code.gson:gson</include> 		                        
                          </includes>                          
                        </artifactSet>
                        <relocations>
                          <relocation>
                            <pattern>com.google.gson</pattern>
                            <shadedPattern>br.net.fabiozumbi12.gson</shadedPattern>
                          </relocation>
                        </relocations>
                        <filters> 
                           <filter>
                              <artifact>br.net.fabiozumbi12.UltimateChat:*</artifact>
                              <includes>
                              <include>**</include>
                              </includes>
                           </filter>  
                           <filter>
                              <artifact>com.google.code.gson:gson</artifact>
                              <includes>
                              <include>**</include>
                              </includes>
                           </filter>                                           
                        </filters>  
                        <outputFile>${project.basedir}/target/UltimateChat-${project.version}-b${BUILD_NUMBER}-Universal.jar</outputFile>           
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>                    
                </configuration>
            </plugin>
            
    </plugins>
  </build>
    
   
</project>